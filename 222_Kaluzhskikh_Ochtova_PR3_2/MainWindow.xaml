<Window x:Class="_222_Kaluzhskikh_Ochtova_PR3_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Kaluzhskikh_Ochtova_PR3_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Сумма:" Grid.Column="0" Grid.Row="1" Width ="50"/>
        <TextBox x:Name="sumTextBox" Grid.Column="1" Grid.Row="1"/>

        <TextBlock Text="Срок (месяцев):" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="termTextBox" Grid.Column="1" Grid.Row="2"/>

        <TextBlock Text="Процентная ставка:" Grid.Column="0" Grid.Row="3" Width="120"/>
        <TextBox x:Name="rateTextBox" Grid.Column="1"  Grid.Row="3"/>

        <Border BorderBrush="Black" BorderThickness="1" Padding="10" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <StackPanel>
                <RadioButton Content="Простые проценты" x:Name="simpleInterestRadioButton" Margin="20,20,20,20"/>
                <RadioButton Content="Сложные проценты" x:Name="compoundInterestRadioButton" Margin="20,20,20,20" />
            </StackPanel>
        </Border>

        <Button Content="Вычислить" Click="CalculateButton_Click" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>
        <TextBlock x:Name="resultTextBlock" Text="Доход по вкладу = " FontWeight="Bold" Foreground="Red" Grid.Column="2" Grid.Row="4" Width ="120" />
        <TextBox  x:Name="resultTextBox" Grid.Column="3" Grid.Row="4" Width ="280" Grid.ColumnSpan="2" HorizontalAlignment="Left" />
    </Grid>
</Window>
